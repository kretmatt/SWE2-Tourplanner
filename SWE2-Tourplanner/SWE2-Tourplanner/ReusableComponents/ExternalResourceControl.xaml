<UserControl x:Class="SWE2_Tourplanner.ReusableComponents.ExternalResourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWE2_Tourplanner.ReusableComponents"
             mc:Ignorable="d"
             MouseDown="ExternalResource_MouseDown"
             Name="ExternalResource">
    <Grid ToolTip="{Binding Link, ElementName=ExternalResource}">
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Favicon,ElementName=ExternalResource}" Height="16" Width="16"/>
            <TextBlock Text="{Binding LinkText,ElementName=ExternalResource}" Padding="3 0 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
